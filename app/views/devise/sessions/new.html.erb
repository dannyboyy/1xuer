<div class="user-sign-in">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <h3 class="text-center"><strong>欢迎回来</strong></h3>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: '你的邮箱' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:'密码' %>
              </div>
              
              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "下次自动登录" %>
                </div>
              <% end -%>

              <div class="form-group">
                <%= f.button "迅速开始", class: "btn btn-success btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>